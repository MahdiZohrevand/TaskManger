<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="task"
                type="zohrevand.mahdi.taskmanager.business.Task" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/day_view_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{task.title}"
                app:layout_constraintRight_toRightOf="parent" />

        <TextView
                android:id="@+id/day_view_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29 سال 2 ماه 10 روز"
                app:layout_constraintLeft_toLeftOf="parent" />

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/day_view_date">

            <zohrevand.mahdi.dayview.view.DayView
                    android:id="@+id/day_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>