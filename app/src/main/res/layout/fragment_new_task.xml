<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="zohrevand.mahdi.taskmanager.view.newtask.NewTaskViewModel" />
    </data>


    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:strokeColor="@android:color/black"
            app:strokeWidth="1dp">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <!--title and description -->
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_task_title_lot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="عنوان"
                    app:boxBackgroundColor="@android:color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_task_title_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.title}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_task_description_lot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="توضیحات"
                    app:boxBackgroundColor="@android:color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/new_task_title_lot">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_task_description_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={viewModel.description}" />

            </com.google.android.material.textfield.TextInputLayout>
            <!--================================================-->
            <!--get beginning task hour-->

            <Spinner
                    android:id="@+id/start_new_task_spinner_hour"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/new_task_description_lot" />


            <TextView
                    android:id="@+id/two_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:minHeight="20dp"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/start_new_task_spinner_hour"
                    app:layout_constraintLeft_toRightOf="@id/start_new_task_spinner_hour"
                    app:layout_constraintTop_toTopOf="@id/start_new_task_spinner_hour" />


            <Spinner
                    android:id="@+id/start_new_task_spinner_minute"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toRightOf="@id/two_dot"
                    app:layout_constraintTop_toTopOf="@id/start_new_task_spinner_hour" />
            <!--================================================-->
            <!--to text-->
            <TextView
                    android:id="@+id/new_task_to_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="تا"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@id/start_new_task_spinner_minute"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/start_new_task_spinner_minute" />
            <!--================================================-->
            <!--ending task hour -->
             <Spinner
                     android:id="@+id/end_new_task_spinner_minute"
                     style="@android:style/Widget.Holo.Light.Spinner"
                     android:layout_width="wrap_content"
                     android:layout_height="0dp"
                     android:layout_marginLeft="16dp"
                     app:layout_constraintRight_toRightOf="parent"
                     app:layout_constraintTop_toBottomOf="@id/new_task_description_lot"
                     android:layout_marginTop="16dp"
                     android:layout_marginRight="16dp"
                     />




             <TextView
                     android:id="@+id/two_dot_end"
                     android:layout_width="wrap_content"
                     android:layout_height="0dp"
                     android:gravity="center"
                     android:text=":"
                     android:textColor="@android:color/black"
                     android:textSize="18sp"
                     app:layout_constraintRight_toLeftOf="@id/end_new_task_spinner_minute"
                     app:layout_constraintTop_toTopOf="@id/end_new_task_spinner_minute"
                     app:layout_constraintBottom_toBottomOf="@id/end_new_task_spinner_minute"
                     android:layout_marginRight="8dp"
                     />


            <Spinner
                    android:id="@+id/end_new_task_spinner_hour"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintTop_toTopOf="@id/end_new_task_spinner_minute"
                    app:layout_constraintBottom_toBottomOf="@id/end_new_task_spinner_minute"
                    app:layout_constraintRight_toLeftOf="@id/two_dot_end"
                    />
            <!--================================================-->


            <!--<Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:onClick="@{() -> viewModel.onSubmitClick()}"
                    android:text="تایید"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/start_new_task_spinner_minute" />

            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{viewModel.description}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button" />-->

            <!--  <androidx.constraintlayout.widget.Guideline
                      android:id="@+id/guideline1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      app:layout_constraintGuide_begin="170dp"
                      app:layout_constraintTop_toBottomOf="@id/new_task_description_lot" />

              <androidx.constraintlayout.widget.Guideline
                      android:id="@+id/guideline2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      app:layout_constraintGuide_begin="218dp" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


</layout>